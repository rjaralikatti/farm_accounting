= form_for @crop, html: { class: "form form-horizontal crop" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-6
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :farm_id, class: 'control-label col-lg-2'
    .col-lg-4
      = f.select :farm_id, @farms.collect {|p| [ p.name, p.id ] }, { include_blank: true }, class: 'form-control', required: true
    = f.error_span(:farm_id)
  .form-group
    = f.label :season, class: 'control-label col-lg-2'
    .col-lg-6
      = f.select :season, @seasons, class: 'form-control', required: true
    = f.error_span(:season)
  .form-group
    = f.label :sowing_date, class: 'control-label col-lg-2'
    .col-lg-2.datepicker
      = f.text_field :sowing_date, class: 'form-control', required: true, data: {provide: 'datepicker'}
    = f.error_span(:sowing_date)
  .form-group
    = f.label :harvest_date, class: 'control-label col-lg-2'
    .col-lg-2.datepicker
      = f.text_field :harvest_date, class: 'form-control', required: true, data: {provide: 'datepicker'}
    = f.error_span(:harvest_date)
  .form-group
    = f.label :area_covered, class: 'control-label col-lg-2'
    .row
      .col-lg-1
        = f.text_field :area_covered, class: 'form-control', required: true
      .col-lg-1
        = f.select :covered_area_measure, @merasures, class: 'form-control', required: true
    = f.error_span(:area_covered)
  .form-group
    = f.label :life_span, class: 'control-label col-lg-2'
    .row
      .col-lg-1
        = f.text_field :life_span_years, placeholder: 'Years', class: 'form-control', required: true
      .col-lg-1
        = f.text_field :life_span_months, placeholder: 'Months', class: 'form-control', required: true
      .col-lg-1
        = f.text_field :life_span_days, placeholder: 'Days', class: 'form-control', required: true
    = f.error_span(:life_span_years)
  .form-group
    = f.label :description, class: 'control-label col-lg-2'
    .col-lg-6
      = f.text_area :description, class: 'form-control', required: true
    = f.error_span(:description)
  .form-group
    .col-lg-offset-2.col-lg-6
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), crops_path, :class => 'btn btn-default'
