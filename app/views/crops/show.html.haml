- model_class = Crop
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @crop.name
%p
  %strong= model_class.human_attribute_name(:farm_id) + ':'
  %br
  = @crop.farm_id
%p
  %strong= model_class.human_attribute_name(:season) + ':'
  %br
  = @crop.season
%p
  %strong= model_class.human_attribute_name(:sowing_date) + ':'
  %br
  = @crop.sowing_date
%p
  %strong= model_class.human_attribute_name(:harvest_date) + ':'
  %br
  = @crop.harvest_date
%p
  %strong= model_class.human_attribute_name(:area_covered) + ':'
  %br
  = @crop.area_covered
%p
  %strong= model_class.human_attribute_name(:covered_area_measure) + ':'
  %br
  = @crop.covered_area_measure
%p
  %strong= model_class.human_attribute_name(:life_span_years) + ':'
  %br
  = @crop.life_span_years
%p
  %strong= model_class.human_attribute_name(:life_span_months) + ':'
  %br
  = @crop.life_span_months
%p
  %strong= model_class.human_attribute_name(:life_span_days) + ':'
  %br
  = @crop.life_span_days
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @crop.description


= link_to t('.back', :default => t("helpers.links.back")), crops_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_crop_path(@crop), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), crop_path(@crop), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
