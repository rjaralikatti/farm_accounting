= form_for @farm, html: { class: "form form-horizontal farm" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :address, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :address, class: 'form-control', required: true
    = f.error_span(:address)
  .form-group
    = f.label :city, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :city, class: 'form-control', required: true
    = f.error_span(:city)
  .form-group
    = f.label :state, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :state, class: 'form-control', required: true
    = f.error_span(:state)
  .form-group
    = f.label :country, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :country, class: 'form-control', required: true
    = f.error_span(:country)
  = f.fields_for :users do |user_f|
    .form-group
      = user_f.label :email, class: 'control-label col-lg-2'
      .col-lg-10
        = user_f.text_field :email, class: 'form-control', required: false
      = user_f.error_span(:email)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), farms_path, :class => 'btn btn-default'
