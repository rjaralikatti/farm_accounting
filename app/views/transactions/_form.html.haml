= form_for @transaction do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :reason
    = f.text_field :reason
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :bill_image_path
    = f.text_field :bill_image_path
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :debit_credit
    = f.text_field :debit_credit
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
